@model DataModels.LoginModel



<div class="container">
    <div class="list-card box-shadow mx-auto login-block">
        <form method="post" class="card-text" asp-controller="Account" asp-action="Login">
            <div class="row">
                <div class="col-12">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="col-12 mb-4">
                    <input asp-for="Email" placeholder="Email*" class="input mb-0" />
                </div>
                <div class="col-12 mb-4">
                    <input asp-for="Password" placeholder="Password*" class="input mb-0" />
                </div>
                <div class="col-md-1 col-1">
                    <input type="checkbox" asp-for="RemmemberMe" class="form-check-input" />
                </div>
                <div class="col-md-5 col-5">
                    <label class="col-form-label pt-0" asp-for="RemmemberMe">Remember Me?</label>
                </div>
                <div class="col-md-6 col-6">
                    <a href="#" class="text-blue">Forgot password?</a>
                </div>
                <div class="col-12 mt-4 text-center">
                    <button type="submit" class="btn-fill mx-auto">Sign In</button>
                    <hr />
                    <a asp-action="Registration" asp-controller="Account" class="text-blue text-decoration-underline">Register Now</a>
                </div>
            </div>

        </form>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

