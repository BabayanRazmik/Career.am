@model DataModels.RegistrationModel

<div class="container">
    <div class="list-card box-shadow mx-auto register-block">
        <form method="post" class="card-text" asp-controller="Account" asp-action="Registration">
            <div class="row">
                <div class="col-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="col-12 mb-4">
                    <input asp-for="FirstName" placeholder="First Name*" class="input mb-0" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-12 mb-4">
                    <input asp-for="LastName" placeholder="Last Name*" class="input mb-0" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-12 mb-4">
                    <input asp-for="Email" placeholder="Email*" class="input mb-0" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-12 mb-4">
                    <input asp-for="Password" placeholder="Password*" class="input mb-0" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-12 mb-4">
                    <input asp-for="ConfirmPassword" placeholder="ConfirmPassword*" class="input mb-0" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="col-12 text-center">
                    <button type="submit" class="btn-fill">Sign Up</button>
                    <hr />
                    <a asp-action="Login" asp-controller="Account" class="text-blue text-decoration-underline">Login Now</a>
                </div>
            </div>
        </form>
    </div>
</div>
